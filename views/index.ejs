<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Fruit Index</title>
    <link rel="stylesheet" href="/css/app.css">    
  </head>
  <body>
    <h1>Fruits index page</h1>
<!-- backend way -->
<a href="/fruits/new">Create a New Fruit</a>
<a href="/sessions/new">Log in</a>
<form action="/sessions?_method=DELETE" method="POST"><button type="submit">Log Out</button></form> 
   <ul>
        <% for (const [index,fruit] of fruits.entries()) 
            {%>
                <li>
                    <%= fruit.name %>
                    <a href='http://localhost:3000/fruits/<%= fruit.id%>'><%= fruit.name %></a>
                    <form action='/fruits/<%=fruit.id%>?_method=DELETE' method='POST'>
                      <input type="submit" value="DELETE"/>
                     </form>
                     <a href='/fruits/<%= fruit.id%>/edit'>Edit</a>
                  </li>
            <%} 
        %>
   </ul>


  </body>
</html>





